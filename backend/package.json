{
  "name": "vital-mail",
  "version": "1.0.0",
  "description": "\u0016A messaging platform designed after email systems.",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest --runInBand --coverage --detectOpenHandles",
    "dev": "nodemon -e ts --exec \"npm run build && npm start\"",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "format": "prettier -w src",
    "check-format": "prettier -c src"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celdond/Vital-Mail.git"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.4",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.0",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.3",
    "typescript": "^5.0.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "prettier": "^3.0.3",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/src/__tests__/*.+(spec|test).+(ts|tsx|js)"
    ]
  }
}
